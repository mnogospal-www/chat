{
	"compilerOptions": {
		"target": "ES2017",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"baseUrl": "src/",
		"paths": {
			"@shared/*": ["shared/*"],
			"@auth/*": [
				"app/(auth)/_components/ui/*",
				"app/(auth)/_components/containers/*",
				"app/(auth)/_config/*",
				"app/(auth)/_types/*",
				"app/(auth)/_schemas/*",
				"app/(auth)/_actions/*"
			]
		}
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
	"exclude": ["node_modules"]
}
